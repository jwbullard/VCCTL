	sinter3d.c \
	stat3d.c \
	totsurf.c \
        transport.c \
	sulfattack3d.c \
	vcctl2thames.c \
	thames2vcctl.c

OBJFILES= ${CFILES:.c=.o} ${HYDCFILES:.c=.o}

EXECS= ${CFILES:.c=.exe}
HYDEXEC= ${HYDCFILES:.c=.exe}

BINDIR= ../../bin

MATHLIB = -lm
PNGLIB = -lpng
ZLIB = -lz
VCCTLLIBDIR= ../../lib
OTHER_LIBDIR= /usr/local/lib
VCCTLLIBNAME= libvcctl.a
VCCTLLIB= -lvcctl

VCCTLINCDIR= ../../include
OTHER_INCDIR= /usr/local/include
VCCTLINC= vcctl.h

# For gcc
CC= gcc
# For ANSI compilers
#CC= cc

CFLAGS= -c -Wall -O2 -I"${VCCTLINCDIR}" -I"${OTHER_INCDIR}"
CLINKFLAGS= -L"${OTHER_LIBDIR}" -L"${VCCTLLIBDIR}" ${VCCTLLIB} ${MATHLIB} ${PNGLIB} ${ZLIB}

RM= rm -f
CP= cp
#--- You shouldn't have to edit anything else. ---

all:	$(EXECS) $(HYDEXEC)

%.o:	%.c
	$(CC) $(CFLAGS) $<

