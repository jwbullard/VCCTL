# Makefile for Windows running MinGW

HYDIFILES= \
	disrealnew.h \
	properties.c \
	burn3d.c \
	burnset.c \
	parthyd.c \
	hydrealnew.c \
	pHpred.c

HYDCFILES = \
	disrealnew.c

CFILES = \
	apstats.c \
	concelas.c \
	aggvrml.c \
	chlorattack3d.c \
	distfapart.c \
	distfarand.c \
	distrib3d.c \
	elastic.c \
	genaggpack.c \
 	genmic.c \
	hydmovie.c \
	image100.c \
	leach3d.c \
	measagg.c \
	oneimage.c \
	perc3d.c \
	poredist3d.c \
	poredist3d-Hg.c \
